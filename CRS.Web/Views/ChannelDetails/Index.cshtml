<div class="demo">
    <table id="channelTable" cellpadding="0" cellspacing="0" border="0" class="display"
           data-bind="dataTable: { dataSource: items,
                    rowTemplate: 'channelTableTemplate',
                    columns: itemColumns,
                    options: {
                        bJQueryUI: true,
                        bPaginate: true,
                        bLengthChange: true,
                        bFilter: true,
                        bSort: true,
                        bInfo: true,
                        bAutoWidth: true,
                        bProcessing: true,
                        sPaginationType: 'full_numbers',
                        bDeferRender: true
                    }}">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Requestor</th>
                <th>EAPR Desc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <br />
    @if (ViewBag.PageAccess.CanAdd)
    {
        <a href="#channelModal" role="button" class="btn btn-primary" data-bind="click: add" data-toggle="modal">Add</a>
    }
</div>
